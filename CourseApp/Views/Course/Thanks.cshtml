@model CourseApp.Models.ViewModels.ThanksViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Thanks.css" rel="stylesheet" />
    <title>Thanks</title>
</head>
<body>
    <div class="container d-flex justify-content-center flex-wrap">
        <div class="row">
            <h1>@Model.developer Tarafından Geliştirilmiştir.</h1>


        </div>
        <a asp-action="List" style="margin-bottom:0px;margin-left:100px">Kursa katılanları listesi</a>
    </div>

    <hr />
    <h2 class="container" style="margin-left:650px;">Hoşgeldin @Model.student.Name</h2><br />

    <div class="container">
        <div class="row justify-content-center flex-wrap">
            @if (Model.student.WillAtend == true)
            {
                @:Kursa katılmış olduğundan dolayı çok mutlu olduk.
            }
            else
            {
                @:Kursa Katılmadığından dolayı Üzüldük.
            }

        </div>
        <h2 style="margin-left:450px" class="mt-3">Diğer Kurslarımızıda Deneyin</h2>
    </div>



    <div class="container d-flex justify-content-center flex-wrap">


        @foreach (var item in Model.kurslars)
        {
            <div class="card m-2" style="width: 18rem;">
                <img src="~/assetst/@item.ImageUrl" style="width:400px;height:200px;" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title" style="color:red;">@item.Name</h5>
                    <p class="card-text" style="color:red;">Some quick example text to build on content.</p>
                    <button style="color:blueviolet" class="btn btn-primary">Kursa Katıl</button>
                </div>
            </div>
        }

    </div>


</body>
</html>
